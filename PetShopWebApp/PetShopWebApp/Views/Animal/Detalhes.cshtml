@model PetShopWebApp.Models.AnimalModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>AnimalModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Model.Nome
        </dd>
        <dt class = "col-sm-2">
            Idade
        </dt>
        <dd class = "col-sm-10">
            @Model.Idade
        </dd>
        <dt class = "col-sm-2">
            Tipo
        </dt>
        <dd class = "col-sm-10">
            @Model.Tipo
        </dd>
        <dt class = "col-sm-2">
            Raça
        </dt>
        <dd class = "col-sm-10">
            @Model.Raca
        </dd>
        <dt class = "col-sm-2">
            Responsável
        </dt>
        <dd class = "col-sm-10">
            @Model.Usuario.Nome
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">voltar</a>
</div>
