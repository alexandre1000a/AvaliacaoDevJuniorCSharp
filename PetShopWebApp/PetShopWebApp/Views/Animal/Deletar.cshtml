@model PetShopWebApp.Models.AnimalModel

@{
    ViewData["Title"] = "Deletar Animal";
}

<script>
    async function deletar() {

        const id = @Model.Id;

        $.ajax({
            type: "DELETE",
            url: "/Animal/DeletarAnimal",
            data: { id: id },
            success: function (response) {
                window.location.href = '/Animal/Index'
            },
            error: function (error) {
                // Handle any errors that occur during the request
                console.log(error);
            }
        });


    }
</script>


<h3>Tem certeza que deseja remover o animal:</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Idade
        </dt>
        <dd class="col-sm-10">
            @Model.Idade
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Model.Tipo
        </dd>
        <dt class="col-sm-2">
            Raça
        </dt>
        <dd class="col-sm-10">
            @Model.Raca
        </dd>
        <dt class="col-sm-2">
            Responsável
        </dt>
        <dd class="col-sm-10">
            @Model.UsuarioId
        </dd>
    </dl>

    <form>
        <button type="button" class="mt-4 btn btn-danger" onclick="deletar()">Apagar</button>
        <a asp-action="Index" class="mt-4 btn btn-secondary">Voltar</a>
    </form>
</div>
